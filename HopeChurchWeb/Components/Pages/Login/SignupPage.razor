@page "/signup"

<EditForm Model="@_formSignup">
    <MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16">
        <MudCard Elevation="2">
            <MudCardContent>
                <MudGrid>
                    <!-- Left Column -->
                    <MudItem xs="12" sm="3" Class="d-flex align-center justify-center">
                        <MudText Typo="Typo.h5" Style="font-weight: 500;">註冊</MudText>
                    </MudItem>

                    <!-- Right Column -->
                    <MudItem xs="12" sm="9">
                        <MudStack Spacing="4">
                            <!-- Signup Form -->
                            <MudTextField T="string"
                                          @bind-Value="_formSignup.Account"
                                          Label="帳號"
                                          HelperText="請打真實姓名"
                                          Variant="Variant.Outlined"
                                          FullWidth="true"/>

                            <MudTextField T="string"
                                          @bind-Value="_formSignup.Email"
                                          Label="E-mail"
                                          HelperText="用來寄送忘記密碼確認信"
                                          Variant="Variant.Outlined"
                                          FullWidth="true"/>

                            <MudTextField T="string"
                                          @bind-Value="_formSignup.Password"
                                          InputType="@_passwordInputType"
                                          Label="密碼"
                                          Variant="Variant.Outlined"
                                          Adornment="Adornment.End"
                                          AdornmentIcon="@_passwordInputIcon"
                                          OnAdornmentClick="HandlePasswordInputIconClick"
                                          FullWidth="true"/>

                            <!-- Buttons -->
                            <MudStack Row="true"
                                      Justify="Justify.SpaceBetween"
                                      Style="width: 100%">
                                <MudStack Row="true"
                                          Spacing="1"
                                          AlignItems="AlignItems.Center"
                                          Style="width: 50%; justify-content: center">
                                    <MudText Typo="Typo.body1"
                                             Style="font-weight: 300; margin: 0;">已經有帳號?
                                    </MudText>
                                    <MudButton Variant="Variant.Text"
                                               Style="color: #604847; padding-left: 4px; margin: 0; min-height: 0;"
                                               OnClick="HandleLoginClick">
                                        登入
                                    </MudButton>
                                </MudStack>
                                <MudButton Variant="Variant.Filled"
                                           Style="color: white; background-color: #604847; width: 50%">
                                    註冊
                                </MudButton>
                            </MudStack>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudContainer>
</EditForm>